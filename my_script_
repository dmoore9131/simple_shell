#!/bin/bash

# Randomly generated file name
R=$RANDOM
SCRIPT_FILE="my_script_$R.sh"

# Create a new script file
cat <<EOF > $SCRIPT_FILE
#!/bin/bash

# Execute a series of commands
ls -l
pwd
echo "Hello, world!"
date

# Use logical operators
ls && echo "Success"
pwd || echo "Failure"
echo "Hello" || echo "World" && echo "Goodbye"
echo "Testing" && false || echo "Success"
EOF

# Make the script file executable
chmod +x $SCRIPT_FILE

# Execute the script
./$SCRIPT_FILE

# Remove the script file
rm $SCRIPT_FILE

